@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add new engineers to the registry</h2>

<div class="margin">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <div class="form-control">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
      </div>
      <div class="form-control">
        @Html.LabelFor(model => model.DateEmployed)
        @Html.TextBoxFor(model => model.DateEmployed, new { type="date" })
      </div>
      <input class="btn btn-info" type="submit" value="Add new engineer"/>
    </div>
  }
</div>
